{
  "manifest_version": 3,
  "name": "X-Downloader - 小红书笔记下载器",
  "version": "2.1.0",
  "description": "批量下载小红书作者笔记的Chrome扩展 - 支持图片、视频、文本内容下载",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "scripting",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "https://www.xiaohongshu.com/*",
    "https://*.xiaohongshu.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "X-Downloader - 小红书下载器"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.xiaohongshu.com/*",
        "https://*.xiaohongshu.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["https://www.xiaohongshu.com/*"]
    }
  ]
} 